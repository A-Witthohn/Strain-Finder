<section class="container">
  <h3 class="gallery-name">{{activity.name}}</h3>
  <!-- If the user is logged in, render the gallery content -->
  <section class="flex-row justify-center">
    {{#each activity.CannabisIndices }}
    <header>{{name}}</header>

    <div class="card-body">
      <img src="assets/{{image}}" alt="{{description}}">
<!-- If the user is logged in, render the review section -->
{{#if loggedIn}}
    <form class="mb-3">
        <textarea
          class="form-control"
          id="new-comment-form"
          rows="3"
          placeholder="Add a review..."
        ></textarea>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </section>
<!-- TODO: Otherwise, provide a link to login -->
{{else}}
<a href = "/login">You have to log in to leave a review</a>
{{/if}}
</div>
{{/each}}
   </section>
</section>
