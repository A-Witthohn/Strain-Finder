<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Activity Pairings</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" type="text/css" href="/css/activity.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/activity.js"></script>
</head>

<header>
  <section class="hero is-success ">
    <div class="hero-body">
      <p class="title has-text-centered " id="homepageTitle">StrainFinder</p>



      <div class="dropdown is-hoverable" id="dropdown">
        <div class="dropdown-trigger">
          <button class="button is-primary" aria-haspopup="true" aria-controls="dropdown-menu4">
            <p>Menu</p>



          </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu4" role="menu">
          <div class="dropdown-content">
            <div class="dropdown-item">
              <div class="buttons is-centered">
                <button id="logout" class="button is-primary is-rounded ">Logout</button>
                <hr class="dropdown-divider">
                <button class="button is-primary is-rounded">Homepage</button>
                <button class="button is-primary is-rounded"> Find an Activity</button>
                <button class="button is-primary is-rounded">Explore a Strain</button>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
</header>











<section class="section mb-5 mt-0 pt-0 startpage ">
  <div class="container has-text-centered">
    <div class="row" id="columns-container">
      <div class="row is-one-third" id="data-card-row">
        <h1 class="is-size-1 title" id="left-box-title"></h1>
        <div class="card">
          <h2><strong><span id="symbol"></span></strong></h2>
          <div class="card-content">
            <div class="content" id="">
              <h2 class="activity-name">Activity: {{activity.name}}</h2>
              <!-- If the user is logged in, render the gallery content -->
              {{#each activity.cannabisIndices }}
              <div class="card-body">
                <header>{{name}}</header>
                <img src="/{{image}}" width="400" height="300" alt="{{description}}">
                <!-- If the user is logged in, render the review section -->
                {{!-- {{#if logged_in}} --}}
                <form class="mb-3">
                  <div class="field has-addons">
                    <div class="control">
                      <input class="input is-rounded" type="text" placeholder="Add a Review">
                    </div>
                    <div class="control">
                      <button class="button is-info is-primary is-rounded" id="">
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
                <!-- TODO: Otherwise, provide a link to login -->
                {{!-- {{else}} --}}
                <a href="/login">You have to log in to leave a review</a>
                {{!-- {{/if}} --}}
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
</section>
