<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="/css/login.css">
</head>


<header>
  <section class="hero is-success ">
    <div class="hero-body">
      <p class="title has-text-centered " id="homepageTitle">Strain Finder</p>



      <div class="dropdown is-hoverable" id="dropdown">
        <div class="dropdown-trigger">
          <button class="button is-primary" aria-haspopup="true" aria-controls="dropdown-menu4">
            <p>Menu</p>
          </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu4" role="menu">
          <div class="dropdown-content">
            <div class="dropdown-item has-text-centered">
              <p><strong>Welcome!</strong></p>
              <hr class="dropdown-divider">

              <div class="buttons is-centered">

                <hr class="dropdown-divider">
                <button class="button is-primary is-rounded" id="Homepage">Homepage</button>
                <button class="button is-primary is-rounded" id="Find an Activity"> Find an Activity</button>
                <button class="button is-primary is-rounded" id="Explore a Strain">Explore a Strain</button>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
</header>

<body>

  <h1 class="has-text-centered">Welcome Back</h1>
  <div class="container is-flex">
    <form class="form login-form login-container ">
      <div class="form-group is-flex is-justify-content-center is-align-items-center">
        <input class="form-input" type="text" id="email-login" placeholder="Email" />
      </div>
      <div class="form-group is-flex is-justify-content-center is-align-items-center">
        <input class="form-input" type="password" id="password-login" placeholder="Password" />
      </div>
      <div class="form-group is-flex is-justify-content-center is-align-items-center">
        <button class="btn btn-primary" type="submit" id="login-submit">Login</button>
      </div>
    </form>
  </div>

  <h1 class="has-text-centered">Sign Up</h1>

  <form class="form signup-form">
    <div class="form-group is-flex is-justify-content-center is-align-items-center">
      <input class="form-input" type="text" id="name-signup" placeholder="name" />
    </div>
    <div class="form-group is-flex is-justify-content-center is-align-items-center">
      <input class="form-input" type="text" id="email-signup" placeholder="email" />
    </div>
    <div class="form-group is-flex is-justify-content-center is-align-items-center">
      <input class="form-input" type="password" id="password-signup" placeholder="password" />
    </div>
    <div class="form-group is-flex is-justify-content-center is-align-items-center">
      <button class="btn btn-primary" type="submit" id="signup-submit">Sign Up</button>
    </div>
  </form>
  </div>

<div class="modal is-medium" id="ageCheckModal">
  <div class="modal-background is-medium"></div>
  <div class="modal-content is-medium">
    <div class="box">
      <div class="field is-grouped is-grouped-centered">
        <div class="control">
          <input class="input is-medium has-text-centered is-rounded" type="text" id="nameInput" placeholder="Enter your name">
        </div>
      </div>
      <div class="field is-grouped is-grouped-centered">
        <div class="control">
          <div class="select is-medium is-rounded">
            <select id="ageSelect" >
              <option disabled selected value="" class="has-text-centered is-rounded">Select your Age!</option>
            </select>
          </div>
        </div>
      </div>
      <div class="buttons is-centered">
        <button class="button is-primary is-rounded" id="ageSubmitButton">Submit</button>
        <button class="button is-rounded" id="ageCancelButton">Cancel</button>
      </div>
    </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

</body>


<script src="./js/login.js"></script>